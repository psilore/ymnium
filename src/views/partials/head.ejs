<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1">
<title>Ymnium</title>

<style>
  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box
  }

  *, *:before, *:after {
    box-sizing: border-box;
  }

  @font-face {
    font-family: 'Poppins';
    font-style: normal;
    font-weight: 200;
    src: local(''),
        url('../../static/fonts/poppins-v15-latin-200.woff2') format('woff2'),
        url('../../static/fonts/poppins-v15-latin-200.woff') format('woff')
  }

  @font-face {
    font-family: 'Poppins';
    font-style: normal;
    font-weight: 400;
    font-display: swap;
    src: local(''),
        url('../../static/fonts/poppins-v15-latin-regular.woff2') format('woff2'),
        url('../../static/fonts/poppins-v15-latin-regular.woff') format('woff')
  }

  @font-face {
    font-family: 'Poppins';
    font-style: normal;
    font-weight: 600;
    font-display: swap;
    src: local(''),
        url('../../static/fonts/poppins-v15-latin-600.woff2') format('woff2'),
        url('../../static/fonts/poppins-v15-latin-600.woff') format('woff');
  }

  @font-face {
    font-family: 'Poppins';
    font-style: normal;
    font-weight: 800;
    font-display: swap;
    src: local(''),
        url('../../static/fonts/poppins-v15-latin-800.woff2') format('woff2'),
        url('../../static/fonts/poppins-v15-latin-800.woff') format('woff')
  }

  html,body {
    font-size: 100%;
    width: 100vw;
    height: 100vh;
    color: rgb(255, 255, 255)
  }

  body {
    -webkit-font-smoothing: antialiased;
    font-family: "Poppins", source sans pro, helvetica neue, helvetica, arial, sans-serif;
    text-rendering: optimizeLegibility;
    font-size: 16px;
    line-height: 1.4rem;
    background: rgb(0,0,0);
    background: linear-gradient(329deg, rgba(0,0,0,1) 0%, rgba(10,4,22,1) 54%, rgba(2,21,25,1) 100%);
    z-index:100;
    overflow-y: hidden
  }

  .inline {
    display: inline-flex;
    align-items: center
  }

  .inline {
    position: static;
    margin-top: 0;
    margin-right: .3125rem;
    margin-left: 0
  }

  .checkbox {
    display: grid;
    grid-template-columns: min-content auto;
    grid-gap: 0.2em;
    font-size: 2rem !important;
    padding-right: 0.5rem
  }

  .checkbox .checkbox-label {
    font-size: 1rem !important
  }

  .checkbox--disabled {
    color: grey
  }

  .checkbox-icon {
    display: inline-grid;
    width: 1em;
    height: 1em;
    padding: 0.3rem;
    border-radius: 0.25em;
    color: rgb(219, 165, 236) !important;
    border: 0.1em solid currentColor;
    background-color: rgb(11, 19, 25);
    border: 1px solid rgb(11, 19, 25)
  }

  .checkbox-icon svg {
    transition: transform 0.1s ease-in 25ms;
    transform: scale(0);
    transform-origin: bottom left
  }

  .checkbox-input {
    display: grid;
    grid-template-areas: "checkbox"
  }

  .checkbox-input > * {
    grid-area: checkbox
  }

  .checkbox-input input {
    opacity: 0
  }

  .checkbox-input input:focus + .checkbox-icon {
    background-color: rgb(7, 14, 19);
    outline: transparent
  }

  .checkbox-input input:checked + .checkbox-icon svg {
    transform: scale(1)
  }

  .checkbox-input input:disabled + .checkbox-icon {
    color: grey
  }

  .modal {
    position: absolute;
    top:0;
    left:0;
    height:100%;
    width: 100%
  }

  .modal {
    display: flex !important;
    flex-direction: row;
    flex-wrap: nowrap;
    align-content: center;
    justify-content: center;
    align-items: center;
    z-index:101;
    background-color: hsl(199deg 76% 11% / 79%);
    visibility: hidden;
    opacity: 0;
    transition: opacity 0.5s, visibility 0s 0.5s
  }

  .modal-body .form-group {
    margin: 0 0 1rem
  }

  .modal.active {
    opacity: 1;
    visibility: visible;
    transition: opacity 0.5s
  }

  .modal.active .modal {
    overflow-x: hidden;
    overflow-y: auto
  }

  .modal-dialog {
    position:relative;
    margin: 0 1rem;
    padding: 0rem;
    width: 45rem;
    max-width: 45rem;
    border-radius: 1rem;
    background: rgb(16, 24, 37);
    box-shadow: 0 5px 15px rgb(0, 0, 0, 50%)
  }

  .modal-button, .close-button {
    margin-left: auto
  }
  
  .modal-button {
    appearance: none;
    background-color: transparent;
    border: 1px solid transparent
  }

  .modal-header {
    margin: 0rem 0rem 1rem;
    display: flex;
    flex-direction: row;
    align-content: center;
    justify-content: center;
    align-items: center;
    background-color: rgb(15, 32, 45);
    border-top-left-radius: 1rem;
    border-top-right-radius: 1rem
  }

  .modal-header .close-button {
    padding: 1rem;
    appearance: none;
    background-color: transparent;
    border: 1px solid transparent
  }

  .modal .close-button .icon svg {
    fill: rgb(181, 82, 56)
  }

  .modal .form-row {
    display: flex;
    flex-wrap: wrap
  }

  .modal .modal-body, .modal .form-group, .modal .modal-header, .modal .button-group {
    padding-right: 0.5rem;
    padding-left: 0.5rem
  }

  .modal-body {
    padding-bottom: 1rem
  }

  .modal .form-group.half {
    flex: 0 0 50%;
    flex-grow: 1
  }

  .modal .form-group.quarter {
    flex: 0 0 16.666667%;
    max-width: 16.666667%
  }

  .modal .button-group {
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    align-content: center;
    justify-content: flex-end;
    align-items: center
  }

  .modal label {
    font-size: 0.97rem;
    font-weight: 800;
    margin: 0 0 0.3rem;
    display: inline-flex;
    align-items: center;
  }

  .modal input[type='text'], .modal textarea {
    font-family: "Poppins", source sans pro, helvetica neue, helvetica, arial, sans-serif;
    display: block;
    width: 100%;
    font-weight: 400;
    line-height: 1.9;
    color: rgb(219, 165, 236);
    padding: .5rem 1rem;
    font-size: 1.25rem;
    border-radius: .3rem;
    background-color: rgb(11, 19, 25);
    background-clip: padding-box;
    border: 1px solid rgb(11, 19, 25);
    -webkit-appearance: none;
    -moz-appearance: none;
    appearance: none;
    border-radius: .25rem;
    transition: background-color .15s ease-in-out, box-shadow .15s ease-in-out
  }

  .modal input:focus {
    outline: none
  }

  .modal input:focus-visible, .modal textarea:focus-visible {
    background-color: rgb(7, 14, 19);
    outline: transparent
  }

  .modal button[type='submit'] {
    appearance: none;
    background-color: rgb(56, 181, 89);
    border: 1px solid rgb(56, 181, 89);
    padding: 0.8rem 1.9rem;
    font-size: 1.7rem;
    font-weight: 800;
    text-transform: uppercase;
    line-height: 1.3;
    border-radius: 1rem
  }

  h1 {
    font-size: 3.6rem;
    line-height: 4.2rem;
    padding: 12.5rem 1rem 0;
    background: -webkit-linear-gradient(rgb(108, 81, 255), rgb(232, 5, 99));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent
  }

  h2 {
    font-size: 2.66rem;
    line-height: 3rem;
    padding: 0 1rem
  }

  h3 {
    font-size: 1.8rem;
    font-weight: 400;
    line-height: 2.232rem;
    padding: 0 1rem
  }

  .wrapper {
    min-height: 100vh;
    margin-bottom: -2rem
  }

  .wrapper:after {
    content: "";
    display: block
  }

  footer {
    display: flex;
    justify-content: center;
    align-items: center;
    flex-wrap: wrap;
    color: rgb(109 117 162)
  }

  footer, .wrapper:after {
    height: 2rem
  }

  footer span, footer a {
    font-weight: 600;
    color: rgb(158 164 195)
  }

  footer span:before, footer span:after {
    content: "";
    margin: 0 0.2rem;
  }

  .medium {
    width: 4rem;
    height: 4rem;
    padding: 0.89rem
  }

  .small {
    width: 2.7rem;
    height: 2.7rem;
    padding: 0.59rem
  }

  .icon {
    display: inline-block;
    position: relative;
    vertical-align: middle; 
    overflow: hidden
  }

  .icon object {
    display: inline-block;
    position: absolute;
    top: 0;
    left: 0
  }

  .icon object svg {
    fill: inherit
  }

  .icon.small.light > svg, .icon.medium.light > svg{
    fill: white
  }

  .description h2 {
    font-weight: 200
  }

  p.sub {    
    font-size: 1.5rem;
    line-height: 1.8rem;
    padding: 0 1rem
  }

  .description p {
    font-size: 1.3rem;
    line-height: 2.1rem;
    padding: 0 1rem
  }

  .description .meta {
    margin: 0.4rem 0 0;
    display: flex;
    justify-content: flex-start;
    align-items: center
  }

  .meta .length {
    display: flex;
    flex-direction: row;
    flex-wrap: nowrap;
    align-content: center;
    justify-content: flex-start;
    align-items: center
  }

  .meta .length p {
    padding: 0 1rem 0 0.2rem
  }

  .meta.info, .form-group label {
    color: rgb(158, 164, 195);
    font-weight: 800
  }

  .main {
    display: flex;
    flex-direction: row;
    overflow-x: auto;
    margin: 1rem 0;
    padding: 0 1rem
  }

  .cover {
    height: 300px
  }

  img {
    max-height: 300px;
    width: auto
  }

  img:focus {
    outline: none
  }

  img:focus-visible {
    outline: none
  }

  details:not(:last-child) {
    margin-right: 1rem
  }
  
  details summary:focus {
    outline: none
  }

  details summary:focus-visible {
    outline: 10px solid rgb(227, 85, 109);
    outline-offset: -10px
  }

  details > summary {
    list-style: none
  }

  details > summary::-webkit-details-marker {
    display: none
  }

  .description {
    width: 100vw;
    position: absolute;
    left: 0;
    margin: 1rem 0;
    padding: 0 1rem
  }

  #gitlabLogo {
    width: 24px;
    height: 24px;
    margin: 0 0.5rem
  }
</style>